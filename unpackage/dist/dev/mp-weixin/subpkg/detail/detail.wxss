  width: 50px;
  background-color: yellow;
}
.container .main .mian_start .fen .right .start_fen2 {
  margin-top: 5px;
  border-radius: 20px;
  height: 7px;
  width: 25px;
  background-color: yellow;
}
.container .main .mian_start .fen .right .start_fen3 {
  margin-top: 5px;
  border-radius: 20px;
  height: 7px;
  width: 10px;
  background-color: yellow;
}
.container .main .mian_start .fen .right .start_fen4 {
  margin-top: 5px;
  border-radius: 20px;
  height: 7px;
  width: 30px;
  background-color: yellow;
}
.container .main .mian_start .fen .right .start_fen5 {
  margin-top: 5px;
  border-radius: 20px;
  height: 7px;
  width: 100px;
  background-color: yellow;
}
