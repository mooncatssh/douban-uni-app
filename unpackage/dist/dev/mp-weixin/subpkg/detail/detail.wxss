.container {
  margin-left: 16px;
  width: 90%;
  height: 200px;
}
.container .container_title {
  margin-top: 20px;
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: space-between;
}
.container .container_title .img {
  border-radius: 10px;
  width: 30%;
  height: 80%;
}
.container .container_title .container_right {
  width: 150px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}
.container .container_title .container_right .title {
  font-style: italic;
  font-size: 20px;
}
.container .container_title .container_right .title2 {
  margin-top: 10px;
  font-size: 13px;
  color: #b6b6b6;
}
.container .container_title .container_right .btn {
  margin-top: 30px;
  height: 20%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .container_title .container_right .btn .btn1 {
  border-radius: 5px;
  margin-left: 10px;
  width: 100%;
  height: 30px;
  text-align: center;
  line-height: 25px;
  background-color: #eaeaea;
  padding-top: 5px;
}
.container .container_title .container_right .btn .btn1 .btn1_text {
  color: plum;
  margin-left: 5px;
  font-size: 15px;
}
.container .main {
  border-radius: 10px;
  background-color: #ebebeb;
  margin-top: 10px;
  height: 90px;
}
.container .main .mian_box {
  padding: 0 10px;
  padding-top: 10px;
  display: flex;
  justify-content: space-between;
}
.container .main .mian_box .box_left {
  color: plum;
  font-size: 10px;
}
.container .main .mian_start {
  display: flex;
  margin-left: 40px;
}
.container .main .mian_start .rate {
  display: flex;
  flex-direction: column;
  width: 45%;
}
.container .main .mian_start .rate .main_rate {
  width: 50%;
