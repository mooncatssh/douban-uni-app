.uni-search-bar {
  display: flex;
  flex-direction: row;
  position: relative;
  padding: 16rpx;
}
.search-box {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
}
.search-list-item {
  background-color: #ffffff;
  display: flex;
  padding-bottom: 20px;
  align-items: center;
  justify-content: space-between;
}
.search-list-item .box-content {
  margin-top: 10px;
  display: flex;
  justify-content: space-around;
}
.search-list-item .box-content .left_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-list-item .box-content .left_box .info-box {
  margin-left: 15px;
  width: 150px;
}
.search-list-item .box-content .left_box .info-box .title-box {
  font-size: 17px;
}
.search-list-item .box-content .left_box .info-box .rate {
  margin-top: 11px;
  display: flex;
  align-items: center;
}
.search-list-item .box-content .left_box .info-box .rate text {
  font-size: 10px;
  margin-left: 10px;
  color: #cbcbcb;
}
.search-list-item .box-content .left_box .info-box .contry {
  margin-top: 10px;
  font-size: 13px;
  color: #bcbcbc;
}
.search-list-item .box-content .left_box .looked {
  display: flex;
  flex-direction: column;
  border-left: 1px solid pink;
  width: 40px;
  height: 50%;
  padding-top: 30px;
  padding-left: 20px;
}
.search-list-item .box-content .left_box .looked .looked_1 {
  color: #ffaaff;
  font-size: 14px;
}

